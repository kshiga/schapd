body 
  line-height: 1.7em
  color: #7f8c8d
  font-size: 13px
  background-color: #C19F60


h1,
h3,
h4,
h5,
h6,
label 
  color: #342127 !important;


.pure-img-responsive 
  max-width: 100%
  height: auto


.l-box 
  padding: 1em


.l-box-lrg 
  padding: 2em
  border-bottom: 1px solid rgba(0,0,0,0.1)


.is-center 
  text-align: center



.pure-form label 
  margin: 1em 0 0
  font-weight: bold
  font-size: 100%


.pure-form input[type] 
  border: 2px solid #ddd
  box-shadow: none
  font-size: 100%
  width: 100%
  margin-bottom: 1em


.pure-button 
  background-color: #C7CFB7
  color: white
  padding: 0.5em 2em
  border-radius: 5px


a.pure-button-primary 
  background: white
  color: #C7CFB7
  border-radius: 5px
  font-size: 120%




.home-menu 
  padding: 0.5em
  text-align: center
  box-shadow: 0 1px 1px rgba(0,0,0, 0.10)

.home-menu.pure-menu-open 
  background: #A1956F

.pure-menu.pure-menu-open.pure-menu-fixed 
  border-bottom: none

  z-index: 4


.home-menu .pure-menu-heading 
  color: white
  font-weight: 400
  font-size: 120%


.home-menu .pure-menu-selected a 
  color: white


.home-menu a 
  color: #C7CFB7

.home-menu li a:hover,
.home-menu li a:focus 
  background: none
  border: none
  color: #342127

.splash-container 
  background: #C7CFB7
  z-index: 1
  overflow: hidden
  width: 100%
  height: 88%
  top: 0
  left: 0
  position: fixed !important;


.splash 
  width: 80%
  height: 50%
  margin: auto
  position: absolute
  top: 100px 
  left: 0 
  bottom: 0 
  right: 0
  text-align: center
  text-transform: uppercase



.splash-head 
  font-size: 20px
  font-weight: bold
  color: white
  border: 3px solid white
  padding: 1em 1.6em
  font-weight: 100
  border-radius: 5px
  line-height: 1em



.splash-subhead 
  color: white
  letter-spacing: 0.05em
  opacity: 0.8


.content-wrapper 
  position: absolute
  top: 87%
  width: 100%
  min-height: 12%
  z-index: 2
  background: #F5E4C8




.content-head 
  font-weight: 400
  text-transform: uppercase
  letter-spacing: 0.1em
  margin: 2em 0 1em

.content-head-ribbon 
  color: white

.content-subhead 
  color: #1f8dd6

.content-subhead i 
  margin-right: 7px

.ribbon 
  background: #342127
  color: #aaa



.footer 
  background: #111


/*
 * -- TABLET (AND UP) MEDIA QUERIES --
 * On tablets and other medium-sized devices, we want to customize some
 * of the mobile styles.
 */
@media (min-width: 48em) 

    
    body 
        font-size: 16px

    
    .content 
        padding: 1em


    /* We can align the menu header to the left, but float the
    menu items to the right. */
    .home-menu 
        text-align: left

        .home-menu ul 
            float: right
    

    
    .splash-container 
        height: 500px


    /* We decrease the width of the .splash, since we have more width
    to work with */
    .splash 
        width: 50%
        height: 50%


    .splash-head 
        font-size: 250%



    
    .l-box-lrg 
        border: none




/*
 * -- DESKTOP (AND UP) MEDIA QUERIES --
 * On desktops and other large devices, we want to over-ride some
 * of the mobile and tablet styles.
 */
@media (min-width: 78em) 
    
    .splash-head 
        font-size: 300%


