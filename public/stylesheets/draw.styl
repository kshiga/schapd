#main
    overflow-x: hidden


#shapes
	background-color: blue



.header 
     color: #333
     text-align: center
     border-bottom: 1px solid #eee
 
.header h1 
    margin: 0.2em 0
    font-size: 3em
    font-weight: 100

.header h2 
    font-weight: 100
    color: #ccc
    padding: 0
    margin: 0.2em 0
    

.content-subhead 
    margin: 50px 0 20px 0
    font-weight: 300
    color: #888



#menu 
    width: 80px
    position: absolute
    top: 46
    left: 0
    bottom: 0
    z-index: 11 
    background: #191818
    overflow-y: auto

/*
All anchors inside the menu should be styled like this.
*/
#menu a 
#library-container a 
    color: #999
    border: none
    padding: 0.6em 0 0.6em 0.6em


/*
Remove all background/borders, since we are applying them to #menu.
*/
#menu .pure-menu
#menu .pure-menu ul 
#library-container .pure-menu
#library-container .pure-menu ul 
    border: none
    background: transparent


/*
Add that light border to separate items into groups.
*/
#menu .pure-menu ul
#menu .pure-menu .menu-item-divided 
#library-container .pure-menu ul
#library-container .pure-menu .menu-item-divided     
    border-top: 1px solid #333

/*
Change color of the anchor links on hover/focus.
*/
#menu .pure-menu li a:hover
#menu .pure-menu li a:focus 
#library-container .pure-menu li a:hover
#library-container .pure-menu li a:focus 
    background: #333


/*
This styles the selected menu item `<li>`.
*/
#menu .pure-menu-selected
#menu .pure-menu-heading 
#library-container .pure-menu-selected
#library-container .pure-menu-heading 
    background: #1f8dd6
    
/*
This styles a link within a selected menu item `<li>`.
*/
#menu .pure-menu-selected a 
#library-container .pure-menu-selected a     
    color: #fff
        

/*
This styles the menu heading.
*/
#menu .pure-menu-heading 
#library-container .pure-menu-heading 
    font-size: 110%
    color: #fff
    margin: 0

#library-container
    width: 200px
    position: absolute
    top: 46
    right: 0
    bottom: 0
    z-index: 10
    background: #191818
    overflow-y: hidden
    overflow-x: auto


#myCanvas
    width: 100%