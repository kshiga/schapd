body 
  line-height: 1.7em
  font-size: 13px



.pure-img-responsive 
  max-width: 100%
  height: auto


.l-box 
  padding: 1em


.l-box-lrg 
  padding: 2em
  border-bottom: 1px solid rgba(0,0,0,0.1)


.is-center 
  text-align: center



.home-menu 
  text-align: center
  box-shadow: 0 1px 20px 3px rgba(67,119,116, 0.25)
  text-transform: uppercase

.home-menu.pure-menu-open 
  background: #A7DBD8

.pure-menu.pure-menu-open.pure-menu-fixed 
  border-bottom: none
  z-index: 7


.home-menu .pure-menu-heading 
  color: white
  font-weight: 400
  font-size: 120%

.home-menu .pure-menu-selected a 
  color: white


.home-menu a 
  color: #000
  letter-spacing: 0.12em

#userpicture
  height: 35px
  width: 35px
  border-radius: 10px

.home-menu li a:hover,
.home-menu li a:focus 
  background: none
  border: none
  color: #E0E4CC
  text-shadow: 2px 2px rgba(243,134,48, 0.2)

#right-links
  float: right;
  font-size:12px
  padding: 0.1em

.center-area
  padding: 4em

#firstname
  font-size: 12px
  letter-spacing: 0.09em
  padding: 0 0 0 1em



@media (min-width: 48em) 
  body 
    font-size: 16px

  .home-menu 
    text-align: left

    .home-menu ul 
      float: right

  .splash-head 
    font-size: 250%

@media (min-width: 78em) 
  .splash-head 
    font-size: 300%



