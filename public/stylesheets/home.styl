h1,
h3,
h4,
h5,
h6,
label 
  color: #000 !important;


.pure-img-responsive 
  max-width: 100%
  height: auto


.l-box 
  padding: 1em


.l-box-lrg 
  padding: 2em
  border-bottom: 1px solid rgba(0,0,0,0.1)


.is-center 
  text-align: center



.pure-form label 
  margin: 1em 0 0
  font-weight: bold
  font-size: 100%


.pure-form input[type] 
  border: 2px solid #ddd
  box-shadow: none
  font-size: 100%
  width: 100%
  margin-bottom: 1em


.pure-button 
  color: white
  padding: 0.5em 2em
  border-radius: 5px

.pure-button :hover
  color: white
  padding: 0.5em 2em
  border-radius: 5px

a.pure-button-primary 
  background-color: #FA6900
  color: #E0E4CC
  border-radius: 5px
  letter-spacing: 0.16em !important

a.pure-button-primary :hover
  background-color: white !important
  border-radius: 5px



.splash-container 
  background: #E0E4CC
  z-index: 1
  overflow: hidden
  width: 100%
  height: 100%
  top: 0
  left: 0
  position: fixed !important


.splash 
  width: 100%
  height: 20%
  margin: auto
  position: absolute
  top: 120px 
  left: 0 
  bottom: 0 
  right: 0
  text-align: center
  text-transform: uppercase



.splash-head 
  font-size: 20px
  font-weight: bold
  color: black
  margin-bottom: 0px
  font-weight: 100


.splash-subhead 
  color: black
  letter-spacing: 0.2em !important
  font-size: 20px
  opacity: 0.8
  padding-left: 70px
  line-height: 40px

.content-wrapper 
  position: absolute
  top: 87%
  width: 100%
  min-height: 12%
  z-index: 2
  background: #F9CDAD


.content-head 
  font-weight: 400
  text-transform: uppercase
  letter-spacing: 0.7em !important
  margin: 2em 0 1em

.content-head-ribbon 
  color: white

.content-subhead 
  color: #01839D

.content-subhead i 
  margin-right: 7px

.ribbon 
  background: #FC9D9A

.more
  background: #E0E4CC


.footer 
  background: #C5E0DC

.photo
  display: block
  margin-right: auto
  margin-left: auto
  vertical-align: middle





.footer-links
  padding: 0.2em
  text-align: center
  z-index: 6
  bottom: 0
  background: none !important
  border: none !important
  text-transform:uppercase
  letter-spacing: 0.16em !important


.footer-links li a:hover,
.footer-links li a:focus 
  border: none
  background: rgba(255,255,255,0.17)
  radius: 5px


@media (min-width: 48em) 
  body 
    font-size: 16px

  .content 
    padding: 1em

  .splash 
    width: 50%
    height: 65%

  .splash-head 
    font-size: 250%

  .l-box-lrg 
    border: none


@media (min-width: 78em) 
  .splash-head 
    font-size: 300%


